<%= form_with(model: school) do |form| %>
  <% if school.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(school.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% school.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <%= form.fields_for :address do |address_form| %>
    <div>
      <%= address_form.label :location, style: "display: block" %>
      <%= address_form.text_field :location %>
    </div>

    <div>
      <%= address_form.label :city, style: "display: block" %>
      <%= address_form.text_field :city %>
    </div>

    <div>
      <%= address_form.label :state, style: "display: block" %>
      <%= address_form.text_field :state %>
    </div>

    <div>
      <%= address_form.label :pincode, style: "display: block" %>
      <%= address_form.text_field :pincode %>
    </div>
  <% end %>

  <% if @school.new_record? %>
    <%= form.fields_for :user do |user_form| %>
      <div>
        <%= user_form.label :school_admin_name, style: "display: block" %>
        <%= user_form.text_field :name %>
      </div>

      <div>
        <%= user_form.label :school_admin_email, style: "display: block" %>
        <%= user_form.text_field :email %>
      </div>

      <div>
        <%= user_form.label :school_admin_phone, style: "display: block" %>
        <%= user_form.text_field :phone %>
      </div>
    <% end %>
  <% else %>
    <%= form.fields_for :admins do |school_admin| %>
      <div>
        <%= school_admin.label :school_admin_name, style: "display: block" %>
        <%= school_admin.text_field :name %>
      </div>

      <div>
        <%= school_admin.label :school_admin_email, style: "display: block" %>
        <%= school_admin.text_field :email %>
      </div>

      <div>
        <%= school_admin.label :school_admin_phone, style: "display: block" %>
        <%= school_admin.text_field :phone %>
      </div>
    <% end %>
  <% end %>

  <div>
    <%= form.submit %>
  </div>
<% end %>
